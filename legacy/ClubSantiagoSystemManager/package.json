{
  "name": "club-santiago-system-manager",
  "description": "System Manager for Club Santiago",
  "author": "Club Santiago",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run react:dev\" \"npm run electron:wait\"",
    "react:dev": "vite --host",
    "electron:wait": "wait-on tcp:5173 && npm run electron:start",
    "electron:start": "cross-env NODE_ENV=development electron .",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "supertest": "^7.2.2",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.clubsantiago.manager",
    "productName": "Club Santiago Manager",
    "directories": {
      "output": "C:/Instalador"
    },
    "win": {
      "target": "nsis",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "artifactName": "CSMS-v1.exe"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "db/**/*",
      "package.json",
      "node_modules/**/*"
    ]
  }
}